{
    "name": "dsl-extension",
    "displayName": "DSL Extension Template",
    "description": "A template for a dsl Theia extension.",
    "publisher": "Mathias Schubanz",
    "repository": {
        "type": "git",
        "url": "https://github.com/TypeFox/sprotty-vscode"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "icon.png",
    "contributes": {
        "languages": [
            {
                "id": "dslextension",
                "aliases": [
                    "dslextension"
                ],
                "extensions": [
                    ".mydsl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dslextension",
                "scopeName": "source.mydsl",
                "path": "./syntaxes/dslextension.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "dslextension.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "DSL Extension Diagram"
            },
            {
                "command": "dslextension.diagram.fit",
                "title": "Fit to Screen",
                "category": "DSL Extension Diagram"
            },
            {
                "command": "dslextension.diagram.center",
                "title": "Center selection",
                "category": "DSL Extension Diagram"
            },
            {
                "command": "dslextension.diagram.delete",
                "title": "Delete selected element",
                "category": "DSL Extension Diagram"
            },
            {
                "command": "dslextension.diagram.export",
                "title": "Export diagram to SVG",
                "category": "DSL Extension Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "dslextension.diagram.open",
                    "when": "editorLangId == 'dslextension'"
                },
                {
                    "command": "dslextension.diagram.fit",
                    "when": "dslextension-diagram-focused"
                },
                {
                    "command": "dslextension.diagram.center",
                    "when": "dslextension-diagram-focused"
                },
                {
                    "command": "dslextension.diagram.delete",
                    "when": "dslextension-diagram-focused"
                },
                {
                    "command": "dslextension.diagram.export",
                    "when": "dslextension-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "dslextension.diagram.open",
                    "when": "editorLangId == 'dslextension'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "dslextension.diagram.open",
                    "when": "editorLangId == 'dslextension'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "dslextension.diagram.open",
                    "when": "resourceExtname == '.mydsl'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "dslextension.diagram.fit",
                "when": "dslextension-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "dslextension.diagram.center",
                "when": "dslextension-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "dslextension.diagram.export",
                "when": "dslextension-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "dslextension.diagram.delete",
                "when": "dslextension-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:dslextension",
        "onCommand:dslextension.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/dslextension-extension",
    "devDependencies": {
        "@types/node": "^8.0.0",
        "@types/vscode": "1.46.0",
        "rimraf": "^2.6.3",
        "source-map-loader": "^1.0.2",
        "sprotty-vscode": "^0.1.3",
        "ts-loader": "^8.0.3",
        "tslint": "^5.11.0",
        "typescript": "3.8.3",
        "vscode-languageclient": "^5.2.1",
        "vscode-languageserver": "^5.2.1",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "sprotty-extension": "file:./../sprotty-extension"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build",
        "clean": "rimraf extension/lib extension/pack",
        "build": "tsc && webpack --mode=production",
        "watch": "tsc -w",
        "watch:webpack": "webpack --mode=development --watch",
        "publish": "vsce publish"
    }
}
